        <TextField fx:id="details" maxWidth="1.7976931348623157E308" prefWidth="160.0" />
        <Label styleClass="label-small" text="Numer katalogowy" />
        <TextField fx:id="developmentCode" maxWidth="1.7976931348623157E308" prefWidth="160.0" />
