<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="410.0" maxWidth="670.0" minHeight="410.0" minWidth="670.0" prefHeight="410.0" prefWidth="670.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.edu.pwsztar.controller.JobCreateController">
    <HBox prefHeight="100.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox spacing="10.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
         <Label text="Wybierz klienta" />
            <ChoiceBox fx:id="clients" prefHeight="25.0" prefWidth="250.0" />
         <Label text="Wybierz pojazd" />
            <ChoiceBox fx:id="vehicles" prefHeight="25.0" prefWidth="250.0" />
         <Label text="Opis" />
            <TextArea fx:id="description" prefHeight="110.0" prefWidth="340.0" />
         <Label text="Data ustalona" />
            <DatePicker fx:id="fixedDate" prefHeight="25.0" prefWidth="175.0" />
            <HBox alignment="TOP_RIGHT">
                <padding>
                    <Insets top="10.0" />
                </padding>
                <Button fx:id="add" disable="true" mnemonicParsing="false" onAction="#addJob" text="Dodaj zlecenie z istniejącym pojazdem" />
            </HBox>
        </VBox>
        <Separator orientation="VERTICAL" prefHeight="200.0" />
        <VBox prefWidth="0.0" spacing="10.0" HBox.hgrow="ALWAYS">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
         <Label text="Marka" />
            <TextField fx:id="brand" />
         <Label text="Model" />
            <TextField fx:id="model" />
         <Label text="Rok produkcji" />
            <Spinner fx:id="productionYear" editable="true" />
         <Label text="Numer VIN" />
            <TextField fx:id="vinNumber" />
         <Label text="Pojemność silnika" />
            <Spinner fx:id="engineCapacity" editable="true" />
            <HBox alignment="TOP_RIGHT">
                <padding>
                    <Insets top="10.0" />
                </padding>
                <Button fx:id="addWithVehicle" disable="true" mnemonicParsing="false" onAction="#addJobAndVehicle" text="Dodaj zlecenie z nowym pojazdem" />
            </HBox>
        </VBox>
    </HBox>
</AnchorPane>
